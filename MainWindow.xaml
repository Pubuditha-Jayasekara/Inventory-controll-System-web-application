            <Button Content="Clear" x:Name="btnClear" Grid.Row="3" Margin="63,4,78,41" Click="btnClear_Click" Grid.Column="1"/>
            <Button Content="Login" x:Name="btnLogin" Grid.Row="3" Margin="85,4,139,41" Click="btnLogin_Click" Grid.ColumnSpan="2"  Width="64" />
            <Image Source="I:\ITP Project 2019\Secrets_Application_2019\Secrets_Application_2019\Images\security.png" Grid.Column="1" Margin="10,10,99,0"/>

        </Grid>
    </StackPanel>
</Window>

                <ColumnDefinition Width="47*"></ColumnDefinition>
                <ColumnDefinition Width="103*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="99*"></RowDefinition>
                <RowDefinition Height="33*"></RowDefinition>
                <RowDefinition Height="33*"></RowDefinition>
                <RowDefinition Height="65*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Text="User Name" Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" Margin="26,15,2,0" Height="16" FontWeight="Bold"/>
